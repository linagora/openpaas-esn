.col-xs-12.conference-user-control-bar.text-center
  ul.list-inline
    li
      a(href="", ng-click="toggleInviteRightBar()")
        i.fa.fa-users.fa-2x.conference-toggle-invite-button
    li
      a(href="", ng-click="toggleCamera()")
        i.fa.fa-2x.conference-toggle-video-button(ng-class="{'fa-eye': !videoMuted, 'fa-eye-slash': videoMuted}")
    li
      a(href="", ng-click="toggleSound()")
        i.fa.fa-2x.conference-mute-button(ng-class="{'fa-microphone': !muted, 'fa-microphone-slash': muted}")
    li
      a(ng-click="leaveConference()")
        i.fa.fa-phone.fa-2x.conference-toggle-terminate-call-button
