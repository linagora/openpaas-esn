div.listview
  a.cancel(href="", ng-click='removeShare(share)')
    i.nomargin.remove.mdi.mdi-close

  img.nopadding.lv-img-sm(fallback-src='/images/activitystream.png', ng-src="/api/avatars?objectType=image&id={{::share.target.image}}")

  div.ellipsis
    i.nopadding.already-shared.mdi.mdi-alert(ng-if="share.already" data-html="true" data-title='This message has<br>already been shared here', data-animation="am-flip-x", data-placement="bottom", bs-tooltip="tooltip")
    span.name {{::share.target.displayName}}
