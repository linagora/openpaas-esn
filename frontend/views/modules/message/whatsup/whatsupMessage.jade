div
  a.pull-left(ui-sref="profile({user_id: message.author._id})")
    .media-object
      esn-avatar(user-id="message.author._id")
  div.media-body
    h4.media-heading
      a(ui-sref="profile({user_id: message.author._id})") {{message.author.firstname}} {{message.author.lastname}}
      small
        | &nbsp;-&nbsp;
        a(href="/#messages/{{message._id}}")
          span(am-time-ago="message.published")
    p.multilines(ng-bind-html="message.content | linky:'_blank'")
    message-bottom-links
