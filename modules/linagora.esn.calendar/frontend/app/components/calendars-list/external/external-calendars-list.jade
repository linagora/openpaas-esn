.lv-body
  .lv-item.calendar-item.calendar-header-title.hidden-md
    .media
      .pull-left
        i.mdi.mdi-calendar
      .media-body
        .lv-title #{__('External calendars')}
  .lv-item.calendar-item.calendar-header-title-desktop.visible-md.clickable.toggle-submenu.waves-classic(esn-toggle)
    .media
      .badge-container
        .caret-submenu
          i.mdi.mdi-menu-down
      .calendar-item-left
        i.mdi.mdi-calendar
      .media-body
        .lv-title #{__('External calendars')}
  .calendar-item-right.actions
    .dropdown
      a(href='', data-toggle='dropdown', aria-expanded='true')
        i.mdi.mdi-plus
      ul.not-toggled.dropdown-menu.dropdown-menu-right
        li
          a(href="", esn-modal-launcher='/calendar/app/calendar-public-configuration/calendar-public-configuration.html', controller-as='$ctrl', controller='CalCalendarPublicConfigurationController') #{__('Public calendar')}

  ul.no-padding
    calendars-list-items(
      calendars="$ctrl.sharedCalendars",
      toggle-calendar="$ctrl.toggleCalendar",
      hidden-calendars="$ctrl.hiddenCalendars",
      state-to-go="'calendar.external.shared'",
      show-details="true"
    )

    calendars-list-items(
      calendars="$ctrl.publicCalendars",
      toggle-calendar="$ctrl.toggleCalendar",
      hidden-calendars="$ctrl.hiddenCalendars",
      state-to-go="'calendar.external.public'",
      show-details="true"
    )